<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvMessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickGoVhod"
    tools:context=".activities.Enter">

    <Button
        android:id="@+id/bnVhod"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onClickGoVhod"
        android:text="Вход"
        android:textColor="#000000"
        android:textSize="16dp"
        android:typeface="normal"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnRegist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerbum2"
        app:layout_constraintVertical_bias="0.903" />

    <TextView
        android:id="@+id/tvVerbum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verbum"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/bnRegist"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="292dp"
        android:onClick="onClickGoRegist"
        android:text="Регистрация"
        android:textColor="#000000"
        android:textSize="16dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>